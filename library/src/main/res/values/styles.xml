<resources>

    <declare-styleable name="LoadingView">
        <attr name="petalCount" format="integer"/>
        <attr name="petalLength" format="dimension"/>
        <attr name="petalWidth" format="dimension"/>
        <attr name="startColor" format="color"/>
        <attr name="endColor" format="color"/>
    </declare-styleable>

    <style name="DefaultLoadingView">
        <item name="petalCount">10</item>
        <item name="petalLength">3dp</item>
        <item name="petalWidth">5dp</item>
        <item name="startColor">@color/lib_ptr_color_FF888888</item>
        <item name="endColor">@color/lib_ptr_color_FFFFFF</item>
    </style>

</resources>
