<resources>

    <declare-styleable name="EndLine">
        <attr name="line_direction" format="integer" >
            <enum name="vertical" value="1"/>
            <enum name="horizontal" value="2"/>
        </attr>
    </declare-styleable>

    <style name="DefaultEndLine">
        <item name="line_direction">1</item>
    </style>


    <declare-styleable name="LoadingView">
        <attr name="petalCount" format="integer"/>
        <attr name="petalLength" format="dimension"/>
        <attr name="petalWidth" format="dimension"/>
        <attr name="startColor" format="color"/>
        <attr name="endColor" format="color"/>
    </declare-styleable>

</resources>
